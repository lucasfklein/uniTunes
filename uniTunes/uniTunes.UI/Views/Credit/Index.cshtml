@model uniTunes.UI.ViewModels.BuyCreditViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Comprar Créditos";
}

<style>
    #payment-radio .notActive {
        color: #3276b1;
        background-color: #fff;
    }
</style>

<div class="container" style="margin-top:20px; width: 400px;">
    <div class="panel panel-info">
        <div class="panel-heading">
            <h3 class="panel-title text-center">@ViewBag.Title</h3>
        </div>
        <div class="panel-body">
            @using (Html.BeginForm("Buy", "Credit", FormMethod.Post, new { @style = "background-color: white;" }))
            {
                <div class="form-group">
                    @Html.LabelFor(x => x.CreditType, "Tipo de Pagamento", new { @class = "text-right", @style = "color: black;" })
                </div>

                <div class="form-group">
                    <div class="input-group">
                        <div id="payment-radio" class="btn-group">
                            <a class="btn btn-primary btn-sm active" data-toggle="CreditType" data-title="Boleto">Boleto</a>
                            <a class="btn btn-primary btn-sm notActive" data-toggle="CreditType" data-title="Cartão">Cartão</a>
                            <a class="btn btn-primary btn-sm notActive" data-toggle="CreditType" data-title="Transferência">Transferência</a>
                        </div>
                        @Html.HiddenFor(x => x.CreditType)
                    </div>
                </div>
            }
        </div>
    </div>
</div>


<script>
    $('#payment-radio a').on('click', function () {
        var sel = $(this).data('title');
        var tog = $(this).data('toggle');
        $('#' + tog).prop('value', sel);

        $('a[data-toggle="' + tog + '"]').not('[data-title="' + sel + '"]').removeClass('active').addClass('notActive');
        $('a[data-toggle="' + tog + '"][data-title="' + sel + '"]').removeClass('notActive').addClass('active');
    })
</script>
