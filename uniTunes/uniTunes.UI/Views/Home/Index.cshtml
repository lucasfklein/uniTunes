@model uniTunes.UI.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
    string message = ViewContext.RouteData.Values["Message"] != null ? ViewContext.RouteData.Values["Message"].ToString() : string.Empty;
}
<style>
    .box {
        width: 150px;
        height: 150px;
        border: 1px solid #276874;
        margin: 10px;
        border-radius: 5px;
        text-align: center;
    }

    #menu ul {
        list-style-type: none;
    }

        #menu ul li:hover {
            background: black;
        }

    .menu-link {
        text-decoration: none;
        position: absolute;
        color: white;
        top: 0px;
        left: 0px;
        width: 100%;
        height: 100%;
    }

        .menu-link:hover {
            text-decoration: none;
            background-color: black;
            opacity: 0.2;
            color: white;
        }
</style>
<div class="container" style="margin-top:30px;">

    @if (!string.IsNullOrEmpty(message))
    {     
        <div>
            @message
        </div>
    }

    <div class="row">
        <div id="menu">
            <ul>
                @foreach (var item in Model.Menus)
                {
                    <li class="col-xs-4 col-8 col-sm-8 col-lg-8 box drop-shadow" style="@string.Format("background: #3BA89B url(../../Content/images/{0}) no-repeat center center;", item.Image)">
                        @Html.ActionLink(
                            item.Name,
                            item.Action,
                            item.Controller,
                            null,
                            new { @class = "menu-link" }
                        )
                    </li>
                }
            </ul>

        </div>
    </div>
</div>
