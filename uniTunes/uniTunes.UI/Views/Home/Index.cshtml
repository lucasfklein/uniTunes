@model uniTunes.UI.ViewModels.HomeViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .box {
        width: 150px;
        height: 150px;
        border: 1px solid #3073ad;
        margin: 10px;
        border-radius: 5px;
        text-align: center;
    }
</style>
<div class="container" style="margin-top:30px;">
    <div class="row">

        @{
            foreach (var item in Model.Menus)
            {
                <a href="@item.Url">
                    <div class="col-xs-4 col-8 col-sm-8 col-lg-8 box drop-shadow" style="background-color: #428bca;">
                        <span style="height: 100%; color: black; vertical-align: middle;">@item.Name</span>
                    </div>
                </a>
            }
        }   

    </div>
</div>
